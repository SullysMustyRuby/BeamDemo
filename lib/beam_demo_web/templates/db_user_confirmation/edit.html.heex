<h1>Confirm account</h1>

<.form let={_f} for={:db_user} action={Routes.db_user_confirmation_path(@conn, :update, @token)}>
  <div>
    <%= submit "Confirm my account" %>
  </div>
</.form>

<p>
  <%= link "Register", to: Routes.db_user_registration_path(@conn, :new) %> |
  <%= link "Log in", to: Routes.db_user_session_path(@conn, :new) %>
</p>
